<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feeds_fragment_background"
    android:orientation="horizontal"
    android:layout_margin="1dp"
    android:padding="0dp">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/companyentity_company1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/companyentity_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entity"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/companyentity_companyslogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entity"
            android:textSize="8dp" />

        <ImageView
            android:id="@+id/companyentity_companylog_big"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:layout_gravity="bottom"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>


    <ImageView
        android:id="@+id/companyentity_companylog_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>