        class="com.example.z.thelastrow_client_gamedeal.fragment.widget.ListViewFragment"
        tools:layout="@layout/fragment_list"
        android:layout_below="@+id/text_me"
        android:layout_alignParentStart="true" />
</RelativeLayout>