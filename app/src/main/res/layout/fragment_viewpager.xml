<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/frag_viewpager_advertisement"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/frag_viewpager_imagedot_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/viewpagerdot_background" />

        <ImageView
            android:layout_toStartOf="@id/frag_viewpager_imagedot_3"
            android:id="@+id/frag_viewpager_imagedot_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/viewpagerdot_background" />

        <ImageView
            android:id="@+id/frag_viewpager_imagedot_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toEndOf="@id/frag_viewpager_imagedot_3"
            android:background="@drawable/viewpagerdot_background" />

        <ImageView
            android:id="@+id/frag_viewpager_imagedot_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toStartOf="@id/frag_viewpager_imagedot_2"
            android:background="@drawable/viewpagerdot_background" />

        <ImageView
            android:id="@+id/frag_viewpager_imagedot_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toEndOf="@id/frag_viewpager_imagedot_4"
            android:background="@drawable/viewpagerdot_background" />


    </RelativeLayout>

</FrameLayout>