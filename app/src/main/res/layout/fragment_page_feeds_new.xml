<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:id="@+id/frag_main_bar1"
        class="com.example.z.thelastrow_client_gamedeal.fragment.widget.MainBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/frag_main_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:layout_weight="2"
            android:id="@+id/new_feeds_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/list_view_goods_item">

        </ListView>

        <TextView
            android:layout_weight="1"
            android:id="@+id/new_feeds_newstext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/failurelink_internet"
            android:visibility="gone"
            android:textSize="14sp"/>

        <RelativeLayout
            android:id="@+id/new_feeds_loadingPanel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/loadresumetemplate_50"
                android:scaleType="fitXY"
                android:id="@+id/new_feeds_loading"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/new_feeds_loading"
                android:text="@string/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>