<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_good_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="@dimen/item_space_margin"
        android:layout_marginTop="@dimen/item_space_margin"
        android:src="@color/colorAccent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space_margin"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_good_text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pure_bg_type_green"
                android:text="出售"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/list_good_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_space_margin"
                android:text="标题"
                android:textSize="@dimen/font_size_article_title" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_space_margin"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pure_bg_equip"
                android:text="装备"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/list_good_text_equip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_space_margin"
                android:text="装备名"
                android:textSize="@dimen/font_size_article_title" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/item_space_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_min" />

            <TextView
                android:id="@+id/list_good_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_navigation_daohang" />

            <TextView
                android:id="@+id/list_good_text_people_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_space_margin"
                android:gravity="bottom"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人付款" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>