<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="125dp">

    <ImageView
        android:layout_marginTop="@dimen/item_space_margin"
        android:layout_marginStart="@dimen/item_space_margin"
        android:id="@+id/list_good_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/colorAccent"
        android:layout_marginBottom="4dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/item_space_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_good_text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pure_bg_type_green"
                    android:text="出售"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_marginLeft="@dimen/item_space_margin"
                    android:id="@+id/list_good_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:textSize="@dimen/font_size_article_title" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/item_space_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pure_bg_equip"
                    android:text="装备"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_marginLeft="@dimen/item_space_margin"
                    android:id="@+id/list_good_text_equip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装备名"
                    android:textSize="@dimen/font_size_article_title" />

            </LinearLayout>





            <LinearLayout
                android:layout_marginTop="@dimen/item_space_margin"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_min"
                    android:text="￥"/>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/list_good_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_navigation_daohang"
                    android:text="100"/>
                <TextView
                    android:gravity="bottom"
                    android:id="@+id/list_good_text_people_buy"
                    android:layout_marginLeft="@dimen/item_space_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人付款"/>
            </LinearLayout>
        </LinearLayout>






</LinearLayout>