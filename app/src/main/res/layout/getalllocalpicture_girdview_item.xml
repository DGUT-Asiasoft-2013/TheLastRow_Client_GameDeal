<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/getalllocalpicture_gridviewitem_layout"
    android:background="@drawable/getalllocalpicture_griditem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:layout_margin="1dp">


    <ImageView
        android:id="@+id/getalllocalpicture_gridviewitem_picture"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <ImageView
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/getalllocalpicture_gridviewitem_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/checked_48" />

</FrameLayout>